<%- include('./common/header', {page_title: "Add_Edit Creator"}) -%>

<%- include('./common/menu') -%>

<div class="contentDiv" id="content">
    <h2 style="text-align:center">Creator
        <% if (typeof creator === 'undefined') { %>
            Add
        <% }else{ %>
            Edit
        <% } %></h2>

    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <label for="name">Name:</label>
            <input id="name" name="name" value="<%= (typeof creator === 'undefined') ? '' : creator.name %>">

            <label for="email">Email:</label>
            <input id="email" name="email" value="<%= (typeof creator === 'undefined') ? '' : creator.email %>">
            <div>
                <button type="submit"><% if (typeof creator === 'undefined') { %>
                    Add
                <% }else{ %>
                    Edit
                <% } %></button> 
            </div>
        </div>
    </form>
</div>

<%- include('./common/footer') -%>