<%- include('./common/header', {page_title: "Edit Picture"}) -%>

<%- include('./common/menu') -%>
    
      <div class="contentDiv" id="content">
        <h2 style="text-align:center">Edit Picture data</h2>

        <div class="responsive">
          <div class="gallery">
              <img src="<%= picture.image %>" alt="<%= picture.description %>" width="600" height="400">
            <div class="desc"><%= picture.title %></div>
            <div class="desc"><%= picture.description %></div>
          </div>
          <form method="POST">
            <div class="editPictureForm">
              <label>Title: 
                <input type="text" class="desc" value="<%= picture.title %>" name="title"/>
              </label>
              <label>Description: 
                <input type="text" class="desc" value="<%= picture.description %>" name="description"/>
              </label>
              
              <!--Lehet listtel vagy táblával jobba járok, majd ha lesz backend meg adatok akkor kiderül-->
              <br>
              <label>Image ID: <%= picture._id %></label>
              <br>
              <label>Picture uploaded: <%= picture.uploaded_at %></label>
              <br>
              <label>Data modified at: <%= picture.modified_at %></label>
              <br>
              <!--lehet nem fogom használni, tárolni, majd sémánál és db logikánál eldöntöm-->
              <label>Picture deleted at: xxxx-xx-xx</label>
              <br>
              <label>Created by: <%= picture.created_by %></label>
              <div>
                  <button type="button" onclick="window.location.href='/gallery/edit'">Cancel</button>
                  <!--<input type="submit" href="/gallery" value="Update"/>-->
                  <button type="submit">Update</button> <!--nem jó-->
              </div>
            </div>
          </form>
        </div>

<%- include('./common/footer') -%>
