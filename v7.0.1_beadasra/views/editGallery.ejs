<%- include('./common/header', {page_title: "Edit Gallery"}) -%>

<%- include('./common/menu') -%>

  <div class="contentDiv" id="content">
    <h2 style="text-align:center">Edit Gallery</h2>

    <% pictures.forEach(function(picture) { %>
      <div class="responsive">
        <div class="gallery">
          <img src="<%= picture.image %>" alt="<%= picture.description %>" width="600" height="400">
          <div class="desc"><%= picture.title %></div>
          <div class="desc"><%= picture.description %></div>
        </div>

        <div class="center">
          <a href="/gallery/edit/<%= picture._id %>"><button class="changeButton">Edit</button></a>
        </div>
        <div class="center">
          <a href="/picture/delete/<%= picture._id %>"><button>Delete</button></a>
        </div>
      </div>
    <% }) %>

<%- include('./common/footer') -%>