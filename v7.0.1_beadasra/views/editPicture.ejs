<%- include('./common/header', {page_title: "Edit Picture"}) -%>

<%- include('./common/menu') -%>
    
      <div class="contentDiv" id="content">
        <h2 style="text-align:center">Edit Picture</h2>

        <div class="responsive">
          <div class="gallery">
              <img src="<%= picture.image %>" alt="<%= picture.description %>" width="600" height="400">
            <div class="desc"><%= picture.title %></div>
            <div class="desc"><%= picture.description %></div>
          </div>
          <form method="POST">
            <div class="editPictureForm">
              <label for="title">Title:</label>
              <input type="text" class="desc" value="<%= picture.title %>" id="title" name="title"/>
              <label for="description">Description:</label>
              <input type="text" class="desc" value="<%= picture.description %>" id="description" name="description"/>
              <br>
              <p>Created by: <%= picture.created_by %></p>
              <div>
                <a href="/gallery/edit">Cancel</a>
                <Button type="submit">Update</Button>
              </div>
            </div>
          </form>
        </div>

<%- include('./common/footer') -%>
